<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background"  parent="Theme.MaterialComponents.DayNight.DarkActionBar">#FF000000</color>
    <color name="Texto"  parent="Theme.MaterialComponents.DayNight.DarkActionBar">#FFFFFFFF</color>

    <style name="style" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">start</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Operators_Button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/Naranjado</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="numbers_Button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:imageWellStyle">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>

    </style>
</resources>